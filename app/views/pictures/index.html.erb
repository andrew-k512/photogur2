<h1>Pictures (<%= @pictures.length %>)</h1>
<%= link_to("New Picture", "/pictures/new") %>

<% @pictures.each do |picture| %>
  <p><%= picture.title %>, <%= picture.artist %></p>
  <%= link_to(image_tag(picture.url), "/pictures/#{picture.id}") %>
<% end %>

<h1>Most recent pics</h1>
<ul>
  <% @most_recent_pictures.each do |picture| %>
    <li><%= picture.title %>  <%= link_to(image_tag(picture.url), "/pictures/#{picture.id}") %></li>
  <% end %>
</ul><br>

<h1> Pictures from this year:</h1>
<ul>
  <% @pictures_created_in_year.each do |picture| %>
  <li><%= picture.title %></li>
  <%= image_tag picture.url %>
  <% end %>
</ul>

