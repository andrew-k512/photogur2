<h1>Add a picture</h1>
<%= link_to("Back to Pictures", "/pictures") %>



<% if @picture.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@picture.errors.count, "error") %>
    prohibited this picture from being submitted:</h2>

      <ul>
        <% @picture.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
      </ul>
  </div>
<% end %>


<%= form_for(@picture) do |f| %>

  <p>
    <% if @picture.errors[:artist] %>
      <%= f.label :artist, :class => "error" %>
    <% else %>
      <%= f.label :artist %>
    <% end %>
    <%= f.text_field :artist %>
  </p>

  <p>
    <% if @picture.errors[:title] %>
      <%= f.label :title, :class => "error" %>
    <% else %>
      <%= f.label :title %>
    <% end %>
    <%= f.text_field :title %>
  </p>

  <p>
    <% if @picture.errors[:url] %>
      <%= f.label :url, :class => "error" %>
    <% else %>
      <%= f.label :url %>
    <% end %>
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>
